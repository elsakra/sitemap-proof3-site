---
// No props needed for this component
---

<section class="section-padding bg-navy-800 text-white">
  <div class="container-custom">
    <div class="animate-section text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        Ready to Schedule Your Appointment?
      </h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Contact us today to schedule your appointment or learn more about our services. We're here to help you achieve optimal health.
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Information -->
      <div class="animate-section">
        <h3 class="text-2xl font-bold mb-8">Get in Touch</h3>
        
        <div class="space-y-6">
          <!-- Phone -->
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-teal-500 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <div>
              <div class="font-semibold">Phone</div>
              <a href="tel:6623491999" class="text-teal-400 hover:text-teal-300 transition-colors">
                (662) 349-1999
              </a>
            </div>
          </div>
          
          <!-- Fax -->
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-teal-500 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m-9 0h10a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V6a2 2 0 012-2z"></path>
              </svg>
            </div>
            <div>
              <div class="font-semibold">Fax</div>
              <div class="text-gray-300">(662) 349-9734</div>
            </div>
          </div>
          
          <!-- Address -->
          <div class="flex items-start space-x-4">
            <div class="w-12 h-12 bg-teal-500 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <div class="font-semibold">Address</div>
              <div class="text-gray-300">
                7680 Airways Blvd.<br>
                Southaven, MS 38671
              </div>
            </div>
          </div>
        </div>
        
        <!-- Office Hours -->
        <div class="mt-12">
          <h4 class="text-xl font-bold mb-6">Office Hours</h4>
          <div class="space-y-3 text-gray-300">
            <div class="flex justify-between">
              <span>Monday & Wednesday:</span>
              <span>7:00 AM - 5:00 PM</span>
            </div>
            <div class="flex justify-between">
              <span>Tuesday & Thursday:</span>
              <span>8:00 AM - 5:00 PM</span>
            </div>
            <div class="flex justify-between">
              <span>Friday:</span>
              <span>7:00 AM - 11:00 AM</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Call to Action -->
      <div class="animate-section">
        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-8">
          <h3 class="text-2xl font-bold mb-6">Schedule Your Visit</h3>
          <p class="text-gray-300 mb-8">
            Ready to experience personalized, comprehensive internal medicine care? Call us today to schedule your appointment.
          </p>
          
          <div class="space-y-4">
            <a href="tel:6623491999" class="btn-primary w-full text-center block">
              Call (662) 349-1999
            </a>
            <a href="/patient-portal" class="btn-secondary w-full text-center block bg-transparent border-white hover:bg-white hover:text-navy-800">
              Access Patient Portal
            </a>
          </div>
          
          <div class="mt-8 p-4 bg-teal-500/20 rounded-lg">
            <div class="flex items-center space-x-2 mb-2">
              <svg class="w-5 h-5 text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="font-semibold text-teal-400">Same-Day Appointments</span>
            </div>
            <p class="text-sm text-gray-300">
              We have 15 appointments available for same-day access when you need immediate care.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>